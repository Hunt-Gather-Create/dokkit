{
  "name": "dokkit",
  "version": "1.0.3",
  "description": "CLI tool to summarize directory contents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dokkit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "increment-version": "npm version patch",
    "prepublishOnly": "npm run increment-version && pnpm run build && git add -A",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "directory",
    "summarizer",
    "file-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^9.5.0",
    "ignore": "^6.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.18.113",
    "@types/rollup": "^0.54.0",
    "@vitest/coverage-v8": "^0.34.6",
    "typescript": "^4.9.5",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
